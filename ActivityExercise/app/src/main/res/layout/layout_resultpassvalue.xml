<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Value"
        android:id="@+id/tvFirstValue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtFirstValue"
        android:layout_below="@+id/tvFirstValue"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Second Value"
        android:id="@+id/tvSecondValue"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/txtFirstValue"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtSecondValue"
        android:layout_below="@+id/tvSecondValue"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:textColor="#000000"
        android:textStyle="bold"/>
</RelativeLayout>
